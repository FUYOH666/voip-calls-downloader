# Конфигурация для CloudPBX RT Calls Downloader - Multi-Account
# ⚠️  СКОПИРУЙТЕ В .env И ЗАПОЛНИТЕ СВОИМИ ДАННЫМИ
# ⚠️  НИКОГДА НЕ КОММИТИТЕ .env ФАЙЛ В РЕПОЗИТОРИЙ!

# === ОБЩИЕ НАСТРОЙКИ ===
DOWNLOAD_DIR=./downloads
CHECK_INTERVAL=300
LOOKBACK_HOURS=24
MIN_DURATION_SECONDS=180
ONLY_INCOMING=true
DATABASE_PATH=./cloudpbx_calls.db
LOG_LEVEL=INFO

